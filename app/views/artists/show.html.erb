
<div class="row text-center">
  <div class="col-sm-8">
    <h1><strong><%= @artist.name %></strong></h1>
  </div>

  <% @albums.each do |a| %>
  <div class="col-sm-4 col-md-4 col-lg-3">
    <div class="thumbnail">
      <img src="<%= a.image_url %>" alt="...">
      <div class="caption">
        <h3><%= a.name %></h3>
        <p><%= a.released_at %></p>
    </div>
    </div>
  </div>
  <% end %>
</div>
